                    </nav>
                </div>
                <div class="col-lg-8" style="background-color: aliceblue; background-color: rgba( 255, 255, 255, 0.5 );">
                    <div class="container mb-4">
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th scope="col"> </th>
                                                <th scope="col">Product</th>
                                                <th> </th>
                                            </tr>
                                        </thead>
                                            <tbody>
                                                <% for ( c of cart) {%>
                                                <tr>
                                                    <td><img src="https://dummyimage.com/50x50/55595c/fff" /> </td>
                                                    <td><%=c.id %></td>
                                                    <td><%=c.place_name %></td>
                                                    <td><%=c.phone %></td>
                                                    <td class="text-right"><button onclick="deleteCartItem(<%=c.id%>)" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> </button> </td>
                                                </tr>
                                                <% } %>
                                            </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col mb-2">
                                <div class="row">
                                    <div class="col-sm-12  col-md-6">
                                        <a href="/"><button class="btn btn-block btn-light">Continue Select</button></a>
                                    </div>
