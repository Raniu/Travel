    <div class="hero-wrap js-fullheight" style="background-image: url('/images/bg_2.jpg'); ">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters js-fullheight align-items-center justify-content-start" data-scrollax-parent="true" style="padding-top:120px">
                <div class="col-lg-4">
                    <aside class="user-info-wrapper" style="background-color: aliceblue; background-color: rgba( 255, 255, 255, 0.5 );">
                        <div class="user-info" >
                            <div class="user-avatar">
                                <a class="edit-avatar" href="#"></a><img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="User"></div>
                            <div class="user-data">
                                <h4><%=user.name %></h4>
                                <p>
                                    <spa/n id="year"></spa>
                                    <spa/n class="point">.</spa>
                                    <spa/n id="month"></spa>
                                    <spa/n class="point">.</spa>
                                    <spa/n id="date"></spa>
                                    <spa/n id="day"></spa>
                                </p>
                            </div>
                        </div>
                    </aside>
                    <nav class="list-group">
                        <a class="list-group-item" href="/profiles"><i class="fa fa-user"></i>Profile</a>
                        <a class="list-group-item with-badge active" href="/users"><i class="fa fa-heart"></i>Wishlist<span class="badge badge-primary badge-pill">3</span></a>
                        <a class="list-group-item with-badge" href="#"><i class="fa fa-tag"></i>Best routes<span class="badge badge-primary badge-pill">4</span></a>
